                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="0.02*"/>
                                                            <ColumnDefinition Width="0.03*"/>
                                                            <ColumnDefinition Width="0.95*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackLayout Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                                        BackgroundColor="Red">

                                                        </StackLayout>
