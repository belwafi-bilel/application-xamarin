                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="0.5*"/>
                                                        </Grid.RowDefinitions>
                                                        <Image Grid.Row="0" Margin="8,3,8,3" Source="logo.png" VerticalOptions="Start" WidthRequest="50" HeightRequest="50"/>
                                                        <Image Grid.Row="1" IsVisible="{Binding IsHot}" Source="Favorites1.png" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="18" />
                                                    </Grid>-->

                                                        <Grid Grid.Row="0" Grid.Column="2" Margin="0,2,0,0" RowSpacing="0">
                                                            <Grid.RowDefinitions >
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="0.2*"/>
                                                                <RowDefinition Height="0.2*"/>
                                                                <RowDefinition Height="0.2*"/>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="0.5*"/>
                                                                <ColumnDefinition Width="0.5*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" >
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <StackLayout Grid.Column="0" Orientation="Horizontal" VerticalOptions="Center">
                                                                    <Image  IsVisible="{Binding IsHot, Mode=TwoWay}" Source="Favorites1.png" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="18"/>
                                                                    <Label  Text="{Binding TownName, Mode=TwoWay}" Style="{StaticResource ProductNameStyle}" VerticalOptions="Center" HorizontalOptions="Start"/>
                                                                </StackLayout>

                                                                <!--<Label  Text="{Binding TownName}" Grid.Row="0" Grid.Column="0" Style="{StaticResource ProductNameStyle}"
                                                                   VerticalOptions="Center" HorizontalOptions="Start"/>-->
                                                                <StackLayout Orientation="Horizontal" Margin="5,0,0,0" HorizontalOptions="End" Grid.Row="0" Grid.Column="1"
                                                                         IsVisible="{Binding ShowOwnerInfo}">
                                                                    <Label  Text="{Binding OwnerInfo.Name}"  Style="{StaticResource ProductNameStyle}" HorizontalOptions="End" HorizontalTextAlignment="End"/>
                                                                    <Label  Text="{Binding OwnerInfo.Mobile}"  Style="{StaticResource ProductNameStyle}" HorizontalOptions="End" HorizontalTextAlignment="End">
                                                                    </Label>
                                                                </StackLayout>
                                                            </Grid>
                                                            <!--<Label Grid.Row="1" Grid.Column="0" VerticalOptions="Center" Text="{Binding ProductName}" 
                                               FontFamily="{StaticResource NunitoRegular}" Style="{StaticResource SmallTextStyle}"/>-->
                                                            <StackLayout Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalOptions="Center">
                                                                <Label Text="{Binding ProductName, Mode=TwoWay}" FontFamily="{StaticResource NunitoRegular}" Style="{StaticResource SmallTextStyle}"/>
                                                                <Label Text="{Binding Path=., Converter={StaticResource houseNumberConverter}, Mode=TwoWay}"
                                                   FontFamily="{StaticResource NunitoRegular}" Style="{StaticResource SmallTextStyle}"/>
                                                            </StackLayout>
                                                            <Label Grid.Row="1" Grid.Column="1" VerticalOptions="Center">
                                                                <Label.FormattedText>
                                                                    <FormattedString>
                                                                        <Span Text="Rent: " FontFamily="{StaticResource NunitoRegular}" Style="{StaticResource SpanSmallTextStyle}"/>
                                                                        <Span Text="{Binding RentPrice,StringFormat='{0:#,##.00}'} " FontFamily="{StaticResource NunitoRegular}" Style="{StaticResource SpanSmallTextStyle}" TextColor="{StaticResource OrangeColor}"/>
                                                                        <Span Text=" "/>
                                                                        <Span Text="{Binding RentUnit}" FontFamily="{StaticResource NunitoRegular}" FontSize="9"/>
                                                                    </FormattedString>
                                                                </Label.FormattedText>
                                                            </Label>

                                                            <StackLayout Grid.Row="2" Grid.Column="0" Orientation="Horizontal"
                                                     VerticalOptions="Center">
                                                                <Label Text="Area:" FontFamily="{StaticResource NunitoRegular}" Style="{StaticResource SmallTextStyle}"/>
                                                                <Label Text="{Binding Area}" TextColor="LightSteelBlue" FontFamily="{StaticResource NunitoRegular}" Style="{StaticResource SmallTextStyle}"/>
                                                            </StackLayout>
                                                            <Label Grid.Row="2" Grid.Column="1" VerticalOptions="Center">
                                                                <Label.FormattedText>
                                                                    <FormattedString>
                                                                        <Span Text="Sale: " FontFamily="{StaticResource NunitoRegular}" Style="{StaticResource SpanSmallTextStyle}"/>
                                                                        <Span Text="{Binding SalePrice,StringFormat='{0:#,##.00}'}" FontFamily="{StaticResource NunitoRegular}" Style="{StaticResource SpanSmallTextStyle}" TextColor="{StaticResource OrangeColor}"/>
                                                                        <Span Text=" "/>
                                                                        <Span Text="{Binding SaleUnit}" FontFamily="{StaticResource NunitoRegular}" FontSize="9"/>
                                                                    </FormattedString>
                                                                </Label.FormattedText>
                                                            </Label>

                                                            <StackLayout Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalOptions="Center">
                                                                <Label FontSize="12" Text="&#xf007;" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                                                                    <Label.FontFamily>
                                                                        <OnPlatform x:TypeArguments="x:String" iOS="Font Awesome 5 Free" Android="fa-solid-900.ttf#Font Awesome 5 Free Solid" >
                                                                        </OnPlatform>
                                                                    </Label.FontFamily>
                                                                </Label>
                                                                <Label>
                                                                    <Label.FormattedText>
                                                                        <FormattedString>
                                                                            <Span Text="{Binding StaffInfo.Name}" FontFamily="{StaticResource NunitoRegular}" Style="{StaticResource SpanSmallTextStyle}"/>
                                                                            <Span Text=" - "/>
                                                                            <Span Text="{Binding StaffInfo.Mobile} " FontFamily="{StaticResource NunitoRegular}" 
                                                                            Style="{StaticResource SpanSmallTextStyle}" TextColor="{StaticResource OrangeColor}"/>

                                                                        </FormattedString>
                                                                    </Label.FormattedText>
                                                                </Label>
                                                            </StackLayout>
                                                        </Grid>
                                                        <Grid HeightRequest="30" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="0.08*"/>
                                                                <ColumnDefinition Width="0.42*"/>
                                                                <ColumnDefinition Width="0.08*"/>
                                                                <ColumnDefinition Width="0.42*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Label Grid.Column="0" FontSize="12" Text="&#xf783;"
                                                   VerticalTextAlignment="Center"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center">
                                                                <Label.FontFamily>
                                                                    <OnPlatform x:TypeArguments="x:String" iOS="Font Awesome 5 Free" Android="fa-solid-900.ttf#Font Awesome 5 Free Solid" >
                                                                    </OnPlatform>
                                                                </Label.FontFamily>
                                                            </Label>
                                                            <Label Grid.Column="1" Text="{Binding CreatedDate, StringFormat='{0:dd/MM/yyyy h:mm tt}'}"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="Center"
                                                   MaxLines="2" LineBreakMode="WordWrap"
                                                   TextColor="LightSteelBlue" FontFamily="{StaticResource NunitoRegular}" Style="{StaticResource SmallTextStyle}"/>
                                                            <Label Grid.Column="2" FontSize="12" Text="&#xf274;" 
                                                   VerticalTextAlignment="Center"
                                                   VerticalOptions="Center">
                                                                <Label.FontFamily>
                                                                    <OnPlatform x:TypeArguments="x:String" iOS="Font Awesome 5 Free" Android="fa-solid-900.ttf#Font Awesome 5 Free Solid" >
                                                                    </OnPlatform>
                                                                </Label.FontFamily>
                                                            </Label>
                                                            <Label Grid.Column="3" Text="{Binding UpdatedDate, StringFormat='{0:dd/MM/yyyy h:mm tt}'}"
                                                   VerticalOptions="Center"
                                                   MaxLines="2" LineBreakMode="WordWrap"
                                                   TextColor="LightSteelBlue" FontFamily="{StaticResource NunitoRegular}" Style="{StaticResource SmallTextStyle}"/>
                                                            <Grid.Margin>
                                                                <OnPlatform x:TypeArguments="Thickness">
                                                                    <On Platform="iOS">0,5,0,5</On>
                                                                    <On Platform="Android">0,4,0,4</On>
                                                                </OnPlatform>
                                                            </Grid.Margin>
                                                        </Grid>
                                                    </Grid>
                                                </DataTemplate>
                                            </sync:SfListView.ItemTemplate>
                                            <sync:SfListView.LoadMoreTemplate>
                                                <DataTemplate>
                                                    <Grid HeightRequest="70" IsVisible="{Binding CanLoadMoreDeletedProduct}">
                                                        <Label Text="Load more..." TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" 
                                           HorizontalOptions="Center"
                                           IsVisible="{Binding IsBusy, Converter={StaticResource inverseBoolConverter}, Source={x:Reference Name=productList}}" />

                                                        <sync:LoadMoreIndicator IsRunning="{Binding IsBusy, Source={x:Reference Name=productList}}" 
                                                            IsVisible="{Binding IsBusy, Source={x:Reference Name=productList}}"
                                                            Color="Green" VerticalOptions="Center"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </sync:SfListView.LoadMoreTemplate>
                                        </sync:SfListView>
                                    </pulltoRefresh:SfPullToRefresh.PullableContent>
                                </pulltoRefresh:SfPullToRefresh>
                            </tabView:SfTabItem.Content>
                        </tabView:SfTabItem>
                    </tabView:SfTabView>
                </Grid>
                <views:FloatingActionButton Margin="0,0,16,16"
                                    Image="add_48.png" ButtonColor="{StaticResource NavigationPrimary}"  
